{% extends '_layout' %}

{% block content %}
  {% include '_components/search/index.twig' %}

  {% set crawls = craft.entries.section('crawls')
    .search(craft.request.getQuery('q'))
    .all()
  %}

  {% if crawls|length > 0 %}
    {% include '_components/search-header/index.twig' with {
      title: 'Searching for "' ~ craft.request.getQuery('q') ~ '"'
    } %}
    {% include '_components/grid/index.twig' with {
      cards: crawls 
    } %}
  {% else %}
    {% include '_components/search-header/index.twig' with {
      title: 'No results'
    } %}
  {% endif %}
{% endblock %}