<article class="grid__item card" data-card="{% if cardData is defined %}{{ cardData|json_encode() }}{% endif %}">
  <a {% if data is defined %}href="{{ data.url }}/"{% endif %} data-card-image>
    <img class="card__img" {% if data is defined %}src="{{ data.image.first().url }}" alt="{{  data.title }}"{% endif %} />
  </a>
  <div class="card__info">
    <h3 class="card__title">
      <a class="card__title-link" data-card-title href="#">
        {% if data is defined %}{{ data.title }}{% endif %}
      </a>
    </h3>
    <ul class="card-tools">
      <li class="card-tools__item">
        <a class="card-tools__link" {% if data is defined %}href="https://twitter.com/intent/tweet?text={{data.title}}&via=audiocrawl&hashtags=WebAudio"{% endif %} data-card-tweet data-link target="_blank">
          <svg class="card-tools__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="14" height="14">
            <title>Twitter Icon</title>
            <path d="M16,3c-0.6,0.3-1.2,0.4-1.9,0.5c0.7-0.4,1.2-1,1.4-1.8c-0.6,0.4-1.3,0.6-2.1,0.8c-0.6-0.6-1.5-1-2.4-1 C9.3,1.5,7.8,3,7.8,4.8c0,0.3,0,0.5,0.1,0.7C5.2,5.4,2.7,4.1,1.1,2.1c-0.3,0.5-0.4,1-0.4,1.7c0,1.1,0.6,2.1,1.5,2.7 c-0.5,0-1-0.2-1.5-0.4c0,0,0,0,0,0c0,1.6,1.1,2.9,2.6,3.2C3,9.4,2.7,9.4,2.4,9.4c-0.2,0-0.4,0-0.6-0.1c0.4,1.3,1.6,2.3,3.1,2.3 c-1.1,0.9-2.5,1.4-4.1,1.4c-0.3,0-0.5,0-0.8,0c1.5,0.9,3.2,1.5,5,1.5c6,0,9.3-5,9.3-9.3c0-0.1,0-0.3,0-0.4C15,4.3,15.6,3.7,16,3z"/></g>
          </svg>
        </a>
      </li>
      <li class="card-tools__item">
        <a class="card-tools__link" {% if data is defined %}href="{{ data.originalUrl }}"{% endif %} data-card-original-url data-link target="_blank">
          <svg class="card-tools__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12" width="14" height="14">
            {% if data is defined %}<title>{{ data.title }} original link</title>{% endif %}
            <g class="nc-icon-wrapper">
